<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@android:style/Theme.DeviceDefault.Settings">
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorItem</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:switchStyle">@style/custom_switch</item>
    </style>
    <style name="ActionBar" parent="@android:style/Widget.Material.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:titleTextStyle">@style/TitleStyle</item>
    </style>
    <style name="TitleStyle" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">?android:attr/colorAccent</item>
    </style>
    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/colorDevider</item>
    </style>
    <style name="custom_switch" parent="@android:style/Widget">
        <item name="android:track">@drawable/sw_trk</item>
        <item name="android:thumb">@drawable/sh_th</item>
        <item name="android:switchMinWidth">46dp</item>
        <item name="android:showText">false</item>
    </style>
</resources>
